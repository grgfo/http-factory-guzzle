{
    "name": "http-interop/http-factory-guzzle",
    "description": "An HTTP Factory using Guzzle PSR7",
    "keywords": [
        "psr-7",
        "psr-17",
        "http",
        "factory"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "PHP-FIG",
            "homepage": "http://www.php-fig.org/"
        }
    ],
    "require": {
        "http-interop/http-factory": "dev-master",
        "guzzlehttp/psr7": "^1.3.1"
    },
    "require-dev": {
